<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawerLayout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/topLevelLayout" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout android:id="@+id/appBarLayout" android:background="@color/primary" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar android:theme="@style/Toolbar" android:id="@+id/toolbar" android:background="@color/primary" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:elevation="@dimen/toolbar_elevation" app:contentInsetStart="0dp">
                <ImageButton android:layout_gravity="center_vertical" android:id="@+id/drawMenuToggle" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="48dp" android:layout_height="48dp" android:contentDescription="@string/button_description_accessibility_drawer_menu" app:layout_constraintStart_toStartOf="0" app:srcCompat="@drawable/material_ic_menu_24px_svg"/>
                <TextView android:textSize="24sp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/titleText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/macrodroid" android:textAllCaps="true" android:fontFamily="@font/helvetica"/>
                <androidx.appcompat.widget.SwitchCompat android:theme="@style/SwitchOffDarkerStyle" android:layout_gravity="end" android:id="@+id/onOffSwitch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:layout_marginEnd="@dimen/margin_small"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <net.cachapa.expandablelayout.ExpandableLayout android:id="@+id/infoBar" android:layout_width="match_parent" android:layout_height="wrap_content" app:el_duration="1000" app:el_expanded="false" app:el_parallax="0.5" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/remediesHeader">
            <FrameLayout android:id="@+id/infoBarBg" android:background="@color/md_light_blue_600" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/margin_small_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="bottom" android:id="@+id/infoText" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/home_screen_tile_long_press_info" android:lineSpacingMultiplier="1.2" android:fontFamily="@font/proximanova_regular" android:layout_marginStart="@dimen/margin_medium" android:layout_marginEnd="40dp"/>
                    <View android:id="@+id/barBottomSpace" android:layout_width="match_parent" android:layout_height="@dimen/margin_small_medium"/>
                    <Button android:textColor="@color/white" android:layout_gravity="end" android:id="@+id/configureButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/configure" android:layout_marginEnd="@dimen/margin_medium" style="?attr/borderlessButtonStyle"/>
                </LinearLayout>
                <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/infoBarDismissButton" android:background="?attr/selectableItemBackgroundBorderless" android:padding="10dp" android:focusable="true" android:clickable="true" android:layout_width="@dimen/home_info_dismiss_button_size" android:layout_height="@dimen/home_info_dismiss_button_size" app:srcCompat="@drawable/material_ic_clear_24px_svg"/>
            </FrameLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/homeScreenGrid" android:background="@color/default_background" android:paddingLeft="@dimen/margin_tiny" android:paddingTop="@dimen/margin_tiny" android:paddingRight="@dimen/margin_tiny" android:paddingBottom="@dimen/margin_tiny" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/upgradeBar" android:background="@color/home_screen_upgrade_bar" android:layout_width="match_parent" android:layout_height="58dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/flashSaleTimeRemaining" android:background="@drawable/flash_sale_background_small" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="23:59:12" android:paddingHorizontal="6dp"/>
            <com.hanks.htextview.scale.ScaleTextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/flashSaleText" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/flash_sale" android:maxLines="2" android:layout_weight="1" android:lineSpacingMultiplier="1.3" android:letterSpacing="0.08" app:animationDuration="1500"/>
            <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/upgradeReason" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:text="@string/upgrade_unlimited_support_us_title" android:maxLines="2" android:layout_weight="1" android:fontFamily="@font/proximanova_regular" android:layout_marginStart="@dimen/margin_medium" app:autoSizeMaxTextSize="18sp" app:autoSizeMinTextSize="10sp" app:autoSizeTextType="1"/>
            <com.facebook.shimmer.ShimmerFrameLayout android:id="@+id/shimmerLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_small" android:layout_marginRight="@dimen/margin_small" android:layout_marginHorizontal="@dimen/margin_small" app:shimmer_auto_start="true" app:shimmer_base_alpha="0.85" app:shimmer_dropoff="0.8" app:shimmer_duration="1000" app:shimmer_highlight_alpha="1" app:shimmer_repeat_count="2" app:shimmer_shape="0" app:shimmer_tilt="45">
                <Button android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/upgradeButton" android:layout_width="wrap_content" android:layout_height="38dp" android:text="@string/upgrade" android:textAllCaps="false" android:fontFamily="@font/proximanova_regular" android:paddingStart="@dimen/margin_medium_large" android:paddingEnd="@dimen/margin_medium_large" style="@style/RoundedButton.Green.24"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView android:layout_gravity="start" android:id="@+id/navigationView" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" app:itemIconTint="@color/icon_tint" app:menu="@menu/drawer_view" app:theme="@style/TextAppearance2Lines"/>
</androidx.drawerlayout.widget.DrawerLayout>
