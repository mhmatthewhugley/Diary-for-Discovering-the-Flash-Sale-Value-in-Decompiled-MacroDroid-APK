<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:id="@+id/biometrics_layout" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/biometrics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/fingerprint" android:padding="4dp" android:layout_width="44dp" android:layout_height="44dp" app:srcCompat="@drawable/bio_ic_fingerprint" app:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/face" android:padding="4dp" android:layout_width="44dp" android:layout_height="44dp" app:srcCompat="@drawable/bio_ic_face" app:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iris" android:padding="4dp" android:layout_width="44dp" android:layout_height="44dp" app:srcCompat="@drawable/bio_ic_iris" app:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/voice" android:padding="4dp" android:layout_width="44dp" android:layout_height="44dp" app:srcCompat="@drawable/bio_ic_voice" app:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/heartrate" android:padding="4dp" android:layout_width="44dp" android:layout_height="44dp" app:srcCompat="@drawable/bio_ic_heartrate" app:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/palm" android:padding="4dp" android:layout_width="44dp" android:layout_height="44dp" app:srcCompat="@drawable/bio_ic_palm" app:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/typing" android:padding="4dp" android:layout_width="44dp" android:layout_height="44dp" app:srcCompat="@drawable/bio_ic_behavior" app:tint="@color/white"/>
    </LinearLayout>
    <View android:id="@+id/biometric_divider" android:background="@color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/biometrics" android:layout_alignLeft="@+id/biometrics" android:layout_alignRight="@+id/biometrics"/>
</RelativeLayout>
