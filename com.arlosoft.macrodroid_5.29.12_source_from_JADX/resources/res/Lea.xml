<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/local_variable" android:layout_weight="1" android:layout_marginStart="16dp"/>
        <ImageView android:id="@+id/clearButton" android:background="?attr/selectableItemBackgroundBorderless" android:padding="12dp" android:focusable="true" android:clickable="true" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_clear_white_48dp" android:contentDescription="@string/delete_variable"/>
        <ImageView android:id="@+id/deleteButton" android:background="?attr/selectableItemBackgroundBorderless" android:padding="12dp" android:focusable="true" android:clickable="true" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_delete_white_24dp" android:contentDescription="@string/delete_variable"/>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_tiny">
        <androidx.appcompat.widget.AppCompatEditText android:id="@+id/variable_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:hint="@string/name" android:inputType="text" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <requestFocus/>
        </androidx.appcompat.widget.AppCompatEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/booleanValueContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small">
        <TextView android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/value" android:layout_marginStart="16dp"/>
        <RadioGroup android:orientation="horizontal" android:paddingLeft="@dimen/margin_medium" android:paddingRight="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:paddingHorizontal="@dimen/margin_medium">
            <RadioButton android:id="@+id/trueRadio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/true_label"/>
            <RadioButton android:id="@+id/falseRadio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/false_label" android:layout_marginStart="@dimen/margin_medium"/>
        </RadioGroup>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout android:id="@+id/textValueContainer" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="@dimen/margin_tiny" android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatEditText android:id="@+id/enter_variable_dialog_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:hint="@string/value" android:inputType="text" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
            <requestFocus/>
        </androidx.appcompat.widget.AppCompatEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <include layout="@layout/include_ok_cancel_buttons"/>
</LinearLayout>
