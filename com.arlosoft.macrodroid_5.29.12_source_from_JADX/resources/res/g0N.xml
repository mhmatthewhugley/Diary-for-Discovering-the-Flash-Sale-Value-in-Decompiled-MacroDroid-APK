<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="?attr/actionBarSize" android:elevation="@dimen/toolbar_elevation" style="@style/Toolbar"/>
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/main_upgrade_container" android:background="#202020" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
            <Button android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/main_upgrade_button" android:background="@drawable/select_item_background_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upgrade_to_pro" android:drawablePadding="@dimen/margin_small" android:textAllCaps="true" android:drawableStart="@drawable/ic_arrow_up_bold_circle_white_24dp" android:paddingStart="@dimen/margin_medium" android:paddingEnd="@dimen/margin_medium"/>
        </LinearLayout>
        <TableLayout android:background="@color/home_screen_background" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/main_upgrade_container" android:layout_below="@+id/toolbar" android:splitMotionEvents="false">
            <TableRow android:gravity="center" android:layout_width="64dp" android:layout_height="64dp" android:layout_weight="1" android:splitMotionEvents="false">
                <FrameLayout android:layout_marginTop="@dimen/main_tile_margin_small" style="@style/TitleSquareCard.Macros">
                    <FrameLayout android:id="@+id/macroListButton" android:background="@drawable/main_tile_bg_macros" style="@style/TileSquare">
                        <ImageView android:contentDescription="@string/list_macros" app:srcCompat="@drawable/ic_creation" style="@style/TitleSquareImage"/>
                        <TextView android:id="@+id/main_macro_list_title" android:text="@string/list_macros" style="@style/TileSquareText"/>
                    </FrameLayout>
                </FrameLayout>
                <FrameLayout android:layout_marginTop="@dimen/main_tile_margin_small" android:layout_marginStart="@dimen/main_tile_margin_small" style="@style/TitleSquareCard.Add">
                    <FrameLayout android:id="@+id/macroAddButton" android:background="@drawable/main_tile_bg_add" style="@style/TileSquare">
                        <ImageView android:visibility="visible" android:contentDescription="@string/add_macro" android:alpha="0.5" app:srcCompat="@drawable/ic_plus_circle_white_48dp" style="@style/TitleSquareImage"/>
                        <TextView android:text="@string/add_macro" style="@style/TileSquareText"/>
                    </FrameLayout>
                </FrameLayout>
                <FrameLayout android:layout_marginTop="@dimen/main_tile_margin_small" android:layout_marginStart="@dimen/main_tile_margin_small" style="@style/TitleSquareCard.Templates">
                    <FrameLayout android:id="@+id/macroExamplesButton" android:background="@drawable/main_tile_bg_templates" style="@style/TileSquare">
                        <ImageView android:src="@drawable/ic_stars_white_48dp" android:contentDescription="@string/view_templates" style="@style/TitleSquareImage"/>
                        <TextView android:text="@string/view_templates" style="@style/TileSquareText"/>
                    </FrameLayout>
                </FrameLayout>
            </TableRow>
            <TableRow android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:splitMotionEvents="false">
                <FrameLayout android:layout_marginTop="@dimen/main_tile_margin_small" style="@style/TitleSquareCard.Settings">
                    <FrameLayout android:id="@+id/settingsButton" android:background="@drawable/main_tile_bg_settings" style="@style/TileSquare">
                        <ImageView android:contentDescription="@string/settings" app:srcCompat="@drawable/ic_settings_white_48px" style="@style/TitleSquareImage"/>
                        <TextView android:text="@string/settings" style="@style/TileSquareText"/>
                    </FrameLayout>
                </FrameLayout>
                <FrameLayout android:layout_marginTop="@dimen/main_tile_margin_small" android:layout_marginStart="@dimen/main_tile_margin_small" style="@style/TitleSquareCard.Forum">
                    <FrameLayout android:id="@+id/forumButton" android:background="@drawable/main_tile_bg_forum" style="@style/TileSquare">
                        <ImageView android:src="@drawable/ic_forum_white_48dp" android:contentDescription="@string/forum" style="@style/TitleSquareImage"/>
                        <TextView android:text="@string/forum" style="@style/TileSquareText"/>
                    </FrameLayout>
                </FrameLayout>
                <FrameLayout android:layout_marginTop="@dimen/main_tile_margin_small" android:layout_marginStart="@dimen/main_tile_margin_small" style="@style/TitleSquareCard.Export">
                    <FrameLayout android:id="@+id/importExportButton" android:background="@drawable/main_tile_bg_export" style="@style/TileSquare">
                        <ImageView android:contentDescription="@string/export_import" android:alpha="0.55" app:srcCompat="@drawable/ic_sd_storage_white_48px" style="@style/TitleSquareImage"/>
                        <TextView android:text="@string/export_import" style="@style/TileSquareText"/>
                    </FrameLayout>
                </FrameLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView android:layout_gravity="start" android:id="@+id/navigation_view" android:fitsSystemWindows="true" android:layout_width="wrap_content" android:layout_height="match_parent" app:itemIconTint="@color/primary" app:menu="@menu/drawer_view"/>
</androidx.drawerlayout.widget.DrawerLayout>
