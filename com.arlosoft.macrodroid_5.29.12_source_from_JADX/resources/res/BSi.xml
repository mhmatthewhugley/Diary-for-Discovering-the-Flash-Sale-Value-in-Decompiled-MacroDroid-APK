<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_tiny" android:layout_marginStart="@dimen/margin_medium" android:layout_marginEnd="@dimen/margin_tiny">
                <TableRow android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/colorAccent" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/monday_first_letter" android:layout_weight="1"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/colorAccent" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tuesday_first_letter" android:layout_weight="1"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/colorAccent" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wednesday_first_letter" android:layout_weight="1"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/colorAccent" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/thursday_first_letter" android:layout_weight="1"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/colorAccent" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/friday_first_letter" android:layout_weight="1"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/colorAccent" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/saturday_first_letter" android:layout_weight="1"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/colorAccent" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sunday_first_letter" android:layout_weight="1"/>
                </TableRow>
                <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                    <CheckBox android:id="@+id/checkBoxMonday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/monday3"/>
                    <CheckBox android:id="@+id/checkBoxTuesday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/tuesday3"/>
                    <CheckBox android:id="@+id/checkBoxWednesday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/wednesday3"/>
                    <CheckBox android:id="@+id/checkBoxThursday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/thursday3"/>
                    <CheckBox android:id="@+id/checkBoxFriday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/friday3"/>
                    <CheckBox android:id="@+id/checkBoxSaturday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/saturday3"/>
                    <CheckBox android:id="@+id/checkBoxSunday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:contentDescription="@string/sunday3"/>
                </TableRow>
            </TableLayout>
            <com.ikovac.timepickerwithseconds.TimePicker android:id="@+id/timePicker" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:timePickerMode="spinner"/>
            <View android:background="@color/ok_cancel_button_border" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="4dp"/>
            <CheckBox android:id="@+id/force_alarm_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/use_alarm" android:layout_marginStart="@dimen/margin_medium" android:layout_marginEnd="@dimen/margin_medium"/>
            <TextView android:id="@+id/force_alarm_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/use_alarm_description" android:layout_marginStart="@dimen/margin_medium" android:layout_marginEnd="@dimen/margin_medium"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:gravity="end" android:id="@+id/button_bar" android:paddingTop="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_tiny" android:layout_marginEnd="@dimen/margin_tiny">
        <Button android:id="@+id/cancelButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/button_bar_button_min_width" android:text="@android:string/cancel" style="?android:attr/buttonBarButtonStyle"/>
        <View android:background="@color/ok_cancel_button_border" android:layout_width="1dp" android:layout_height="match_parent"/>
        <Button android:enabled="false" android:id="@+id/okButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/button_bar_button_min_width" android:text="@android:string/ok" style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
