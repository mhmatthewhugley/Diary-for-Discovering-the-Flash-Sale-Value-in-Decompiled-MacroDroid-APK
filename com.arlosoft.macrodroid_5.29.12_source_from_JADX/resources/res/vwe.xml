<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/coordinator_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
        <RelativeLayout android:id="@+id/cell_tower_scanning_layout" android:background="@color/cell_towers_primary" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/scanning_top_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ProgressBar android:layout_gravity="center_vertical" android:id="@+id/progress_spinner" android:layout_width="32dp" android:layout_height="32dp" android:layout_margin="@dimen/margin_medium" android:indeterminateTint="@android:color/white" android:indeterminateTintMode="src_in"/>
                <TextView android:textSize="12sp" android:textColor="@android:color/white" android:layout_gravity="center_vertical" android:id="@+id/scanning_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:layout_marginBottom="@dimen/margin_tiny" android:text="@string/trigger_cell_tower_scanning" android:layout_marginEnd="8dp"/>
            </LinearLayout>
            <Button android:textColor="@android:color/white" android:id="@+id/cell_tower_stop_scanning_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/stop" android:layout_below="@+id/scanning_top_bar" android:layout_alignParentEnd="true" style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <Button android:textColor="@android:color/white" android:id="@+id/cell_tower_scan_bg_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/scan_in_background" android:layout_alignBottom="@+id/cell_tower_stop_scanning_button" android:layout_marginEnd="@dimen/margin_small" android:layout_toStartOf="@+id/cell_tower_stop_scanning_button" style="@style/Base.Widget.AppCompat.Button.Borderless"/>
        </RelativeLayout>
        <TextView android:textStyle="bold" android:textColor="@color/cell_towers_accent" android:id="@+id/cell_tower_count_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_small"/>
        <ListView android:scrollbarStyle="outsideOverlay" android:id="@+id/cell_tower_list" android:paddingBottom="88dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@color/transparent_color" android:dividerHeight="0dp"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/cell_tower_done_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_medium" android:src="@drawable/ic_action_accept_white" android:scaleType="centerInside" android:contentDescription="@string/save_changes" android:layout_marginEnd="@dimen/margin_medium" app:backgroundTint="@color/cell_towers_primary"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
