<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="400dp">
        <LinearLayout android:orientation="horizontal" android:paddingTop="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
            <com.google.android.material.textfield.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatEditText android:id="@+id/configure_confirm_next_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:hint="@string/action_confirm_enter_title_label" android:maxLines="1" android:inputType="textNoSuggestions"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button android:id="@+id/confirm_next_title_magic_text_button" style="@style/MagicTextButton"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
            <com.google.android.material.textfield.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatEditText android:id="@+id/configure_confirm_next_dialog_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:minWidth="300dp" android:hint="@string/action_confirm_enter_message_label" android:maxLines="1" android:inputType="textNoSuggestions"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button android:id="@+id/confirm_next_message_magic_text_button" style="@style/MagicTextButton"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
            <com.google.android.material.textfield.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatEditText android:id="@+id/configure_confirm_next_positive_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:minWidth="300dp" android:hint="@string/action_confirm_enter_positive_button_label" android:maxLines="1" android:inputType="textNoSuggestions"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button android:id="@+id/confirm_next_message_positive_text_button" style="@style/MagicTextButton"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
            <com.google.android.material.textfield.TextInputLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatEditText android:id="@+id/configure_confirm_next_negative_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:minWidth="300dp" android:hint="@string/action_confirm_enter_negative_button_label" android:maxLines="1" android:inputType="textNoSuggestions"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button android:id="@+id/confirm_next_message_negative_text_button" style="@style/MagicTextButton"/>
        </LinearLayout>
        <CheckBox android:id="@+id/quitOnBackCheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/if_confirmed_dialog_quit_macro_on_back_pressed" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <include layout="@layout/include_ok_cancel_buttons"/>
    </LinearLayout>
</ScrollView>
