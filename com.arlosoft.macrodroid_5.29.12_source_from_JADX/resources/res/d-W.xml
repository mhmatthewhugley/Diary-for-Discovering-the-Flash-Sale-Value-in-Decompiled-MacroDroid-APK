<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Spinner android:layout_gravity="center_vertical" android:id="@+id/keep_awake_options_screen_setting" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"/>
        <Spinner android:layout_gravity="center_vertical" android:id="@+id/keep_awake_options_time_setting" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"/>
        <TableLayout android:layout_gravity="center" android:paddingTop="14dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="16sp" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hours_capital" android:paddingStart="8dp" android:paddingEnd="8dp"/>
                <com.arlosoft.macrodroid.common.NumberPicker android:id="@+id/keep_awake_options_hour_picker" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="16sp" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/minutes_capital" android:paddingStart="8dp" android:paddingEnd="8dp"/>
                <com.arlosoft.macrodroid.common.NumberPicker android:id="@+id/keep_awake_options_minute_picker" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="16sp" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/seconds_capital" android:paddingStart="8dp" android:paddingEnd="8dp"/>
                <com.arlosoft.macrodroid.common.NumberPicker android:id="@+id/keep_awake_options_second_picker" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>
        <View android:background="@color/ok_cancel_button_border" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="12dp"/>
        <LinearLayout android:gravity="end" android:id="@+id/button_bar" android:paddingTop="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/cancelButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/button_bar_button_min_width" android:text="@android:string/cancel" style="?android:attr/buttonBarButtonStyle"/>
            <View android:background="@color/ok_cancel_button_border" android:layout_width="1dp" android:layout_height="match_parent"/>
            <Button android:id="@+id/okButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/button_bar_button_min_width" android:text="@android:string/ok" style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
