<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/margin_medium" android:layout_width="300dp" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="300dp" android:layout_height="wrap_content">
        <Button android:id="@+id/set_icon_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/icon"/>
        <FrameLayout android:id="@+id/textColorFrame" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <FrameLayout android:background="?android:attr/colorBackground" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <Button android:id="@+id/set_color_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_color"/>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
    <Button android:id="@+id/set_text_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text"/>
    <FrameLayout android:background="@color/md_grey_200" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small">
        <FrameLayout android:id="@+id/drawer_item_content" android:background="@color/white" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </FrameLayout>
    <CheckBox android:textColor="@color/default_text_color" android:id="@+id/show_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:text="@string/show_icon"/>
    <CheckBox android:textColor="@color/default_text_color" android:id="@+id/ignore_constraints" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/action_force_macro_run_ignore_constraints"/>
    <CheckBox android:textColor="@color/default_text_color" android:id="@+id/hide_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/hide_name"/>
    <Button android:id="@+id/configInputOutputParams" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/action_block_configure_input_output_params" android:textAllCaps="false" style="@style/ColoredButton"/>
</LinearLayout>
