<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RadioGroup android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="8dp" android:paddingEnd="12dp">
        <RadioButton android:textSize="18sp" android:id="@+id/useClipboardRadioButton" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/clipboard_text"/>
        <RadioButton android:textSize="18sp" android:id="@+id/enterTextRadioButton" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/custom_text"/>
    </RadioGroup>
    <LinearLayout android:orientation="horizontal" android:id="@+id/enterTextLayout" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="12dp">
        <androidx.appcompat.widget.AppCompatEditText android:id="@+id/textToMatch" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/enter_text" android:maxLines="1" android:layout_weight="1" android:inputType="textUri">
            <requestFocus/>
        </androidx.appcompat.widget.AppCompatEditText>
        <Button android:id="@+id/magicTextButton" style="@style/MagicTextButton"/>
    </LinearLayout>
    <CheckBox android:id="@+id/clearExistingCheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/paste_action_clear_existing_content" android:layout_marginStart="8dp"/>
    <include android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/include_ok_cancel_buttons"/>
</LinearLayout>
