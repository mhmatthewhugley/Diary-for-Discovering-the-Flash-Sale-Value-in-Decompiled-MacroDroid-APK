<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioGroup android:orientation="horizontal" android:id="@+id/swipe_enabled_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/drawer_position_left"/>
            <RadioButton android:id="@+id/right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/drawer_position_right" android:layout_marginStart="@dimen/margin_medium"/>
        </RadioGroup>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/width"/>
        <SeekBar android:id="@+id/seek_bar_width" android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_tiny" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="20"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/visible_width"/>
        <SeekBar android:id="@+id/seek_bar_visible_width" android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_tiny" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="20"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/height"/>
        <SeekBar android:id="@+id/seek_bar_height" android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_tiny" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="90"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/vertical_offset"/>
        <SeekBar android:id="@+id/seek_bar_offset" android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_tiny" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="90"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/color"/>
        <FrameLayout android:background="@drawable/icon_background" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small">
            <ImageView android:id="@+id/color_image" android:background="@drawable/icon_background" android:layout_width="48dp" android:layout_height="48dp"/>
        </FrameLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/opacity"/>
        <SeekBar android:id="@+id/seek_bar_opacity" android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_tiny" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="255"/>
    </LinearLayout>
</ScrollView>
