<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/logo" android:layout_width="64dp" android:layout_height="56dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/logoImage" android:padding="2dp" android:layout_width="32dp" android:layout_height="0dp" android:src="@drawable/onboarding_intro" android:layout_weight="1"/>
        <TextView android:textAppearance="@style/TextAppearance.Material.Notification.Line2" android:textSize="10dp" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_gravity="bottom" android:id="@+id/current_mode" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Normal" android:maxLines="1"/>
    </LinearLayout>
    <include android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toEndOf="@+id/logo" layout="@layout/include_button_bar"/>
</RelativeLayout>
