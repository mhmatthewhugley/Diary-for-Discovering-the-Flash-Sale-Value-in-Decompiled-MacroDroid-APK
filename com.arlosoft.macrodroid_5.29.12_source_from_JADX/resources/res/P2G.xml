        <TextView android:textColor="@color/darker_white" android:ellipsize="end" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="6dp" android:layout_marginRight="12dp" android:maxLines="3" android:layout_marginHorizontal="12dp"/>
