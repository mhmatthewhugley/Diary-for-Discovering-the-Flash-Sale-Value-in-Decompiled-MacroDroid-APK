                <include android:id="@+id/infoCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_small" android:layout_marginTop="@dimen/margin_small" android:layout_marginRight="@dimen/margin_small" layout="@layout/info_card"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/actionBlocksList" android:paddingTop="@dimen/margin_small" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <FrameLayout android:id="@+id/emptyView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:paddingTop="@dimen/margin_large" android:paddingBottom="@dimen/margin_large" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:layout_gravity="center" android:id="@+id/empty_view" android:layout_width="128dp" android:layout_height="148dp" android:alpha="0.5" style="@style/OnboardingIcon"/>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textStyle="italic" android:textColor="@color/default_text_color" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/macrolist_emptyLabel" android:paddingTop="@dimen/margin_tiny" android:paddingBottom="@dimen/margin_tiny" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_action_blocks_configured"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/fab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_medium" android:src="@drawable/ic_plus_white_24dp" android:tint="@color/actions_primary" android:layout_marginEnd="@dimen/margin_medium" android:backgroundTint="@color/white"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
