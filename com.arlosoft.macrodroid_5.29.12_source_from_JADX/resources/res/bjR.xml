<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/macrodroid_password_protection_info"/>
        <LinearLayout android:gravity="start" android:orientation="horizontal" android:id="@+id/password_entry_switch_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="16dp">
            <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/password_enabled"/>
            <androidx.appcompat.widget.SwitchCompat android:layout_gravity="center_vertical" android:id="@+id/password_entry_dialog_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="6dp" android:paddingEnd="6dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/password_entry_passwords_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp" android:layout_below="@+id/password_entry_switch_layout">
            <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText android:id="@+id/password_entry_dialog_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_password" android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText android:id="@+id/password_entry_dialog_confirm" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/confirm_password" android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView android:textSize="14sp" android:id="@+id/password_warning_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/macrodroid_password_protection_warning" android:layout_marginHorizontal="16dp"/>
        <LinearLayout android:gravity="start" android:orientation="horizontal" android:id="@+id/biometrics_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginStart="16dp">
            <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/macrodroid_password_protection_enable_biometrics"/>
            <androidx.appcompat.widget.SwitchCompat android:layout_gravity="center_vertical" android:id="@+id/enable_biometrics_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="6dp" android:paddingEnd="6dp"/>
        </LinearLayout>
        <TextView android:layout_gravity="center_vertical" android:id="@+id/passwordDelayLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/macrodroid_password_protection_delay" android:layout_marginStart="16dp"/>
        <Spinner android:entries="@array/password_protection_delay_names" android:id="@+id/passwordDelaySpinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:entryValues="@array/password_protection_delay_values_seconds" android:layout_marginStart="16dp"/>
        <include layout="@layout/include_ok_cancel_buttons"/>
    </LinearLayout>
</ScrollView>
