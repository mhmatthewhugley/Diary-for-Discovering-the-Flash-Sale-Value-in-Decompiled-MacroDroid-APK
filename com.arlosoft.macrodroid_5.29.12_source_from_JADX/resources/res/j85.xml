<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center_horizontal" android:background="@color/primary" android:padding="@dimen/margin_medium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unable_to_validate_purchase" android:lineSpacingMultiplier="1.2"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <LinearLayout android:orientation="vertical" android:padding="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="@color/default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/prevent_piracy_information" android:lineSpacingMultiplier="1.2"/>
                <TextView android:textSize="14sp" android:textColor="@color/default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:text="@string/if_running_pirate_version" android:lineSpacingMultiplier="1.2"/>
                <Button android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/upgradeNowButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginBottom="16dp" android:minHeight="48dp" android:text="@string/upgrade_now" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/RoundedButton.PurchaseGreen"/>
                <Button android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/revertToFreeButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:minHeight="48dp" android:text="@string/revert_to_free_version" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/RoundedButton.RevertToFree"/>
                <Button android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/uninstallButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:minHeight="48dp" android:text="@string/uninstall_macrodroid" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/RoundedButton.Uninstall"/>
                <TextView android:textSize="14sp" android:textColor="@color/default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:text="@string/previous_purchased_outside_of_play_store" android:lineSpacingMultiplier="1.2"/>
                <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small">
                    <EditText android:id="@+id/emailAddress" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_email_address" android:maxLines="1" android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_tiny">
                    <EditText android:id="@+id/serialCode" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_serial" android:maxLines="1" android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/upgradeWithSerialButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginBottom="16dp" android:minHeight="48dp" android:text="@string/apply_serial_code" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/RoundedButton.LightBlue"/>
                <TextView android:textSize="14sp" android:textColor="@color/default_text_color" android:autoLink="email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:text="@string/previously_purchased_via_play_store" android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout android:id="@+id/loadingBlocker" android:background="@color/loading_blocker" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="-40dp">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center_horizontal" android:layout_width="240dp" android:layout_height="240dp" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/simple_loader"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
