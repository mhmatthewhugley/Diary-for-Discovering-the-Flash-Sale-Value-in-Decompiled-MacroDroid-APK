<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/status_bar_latest_event_content" android:background="@color/notification_bar_background" android:layout_width="match_parent" android:layout_height="64dp">
    <ImageView android:layout_gravity="start" android:id="@+id/icon" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/launcher_no_border" android:scaleType="center"/>
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="fill_vertical" android:orientation="vertical" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="72dp" android:minHeight="64dp" android:layout_marginStart="72dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/line1" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Title" android:textColor="@color/white" android:ellipsize="marquee" android:id="@+id/title" android:fadingEdge="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textSize="14dp" android:ellipsize="marquee" android:id="@+id/text2" android:visibility="gone" android:fadingEdge="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:layout_marginBottom="-2dp" android:singleLine="true" android:layout_marginStart="8dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/line3" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/TextAppearance.StatusBar.EventContent" android:ellipsize="marquee" android:layout_gravity="center" android:id="@+id/text" android:fadingEdge="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textSize="14dp" android:textColor="#999999" android:gravity="center" android:layout_gravity="center" android:id="@+id/info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="0"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
