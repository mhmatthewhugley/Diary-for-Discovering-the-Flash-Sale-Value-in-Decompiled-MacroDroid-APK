<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/topContainer" android:background="@drawable/template_comments_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_tiny">
        <com.arlosoft.macrodroid.avatar.views.AvatarView android:layout_gravity="center_vertical" android:id="@+id/avatarImage" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginStart="@dimen/margin_tiny" app:av_border_color="@color/template_primary" app:av_border_width="1dp" app:av_text_size_percentage="55"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textColor="@color/default_text_color" android:id="@+id/macroNameText" android:paddingTop="@dimen/margin_tiny" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/margin_small" android:paddingEnd="@dimen/margin_small"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/comments_username_color" android:id="@+id/userName" android:paddingBottom="@dimen/margin_tiny" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/margin_small" android:paddingEnd="@dimen/margin_small"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/comments_top_separator" android:layout_width="match_parent" android:layout_height="1dp" android:elevation="1dp"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/coordinatorLayout" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:paddingTop="@dimen/margin_tiny" android:paddingBottom="@dimen/margin_tiny" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="@dimen/margin_small" android:paddingEnd="@dimen/margin_small"/>
        <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/loadingView" android:layout_width="240dp" android:layout_height="240dp" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/simple_loader"/>
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/errorView" android:paddingBottom="@dimen/margin_large" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView android:layout_width="160dp" android:layout_height="160dp" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/cloud_disconnection"/>
            <TextView android:textSize="18sp" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/could_not_connect"/>
            <androidx.appcompat.widget.AppCompatButton android:textColor="@color/white" android:layout_gravity="center_horizontal" android:id="@+id/retryButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:text="@string/retry" app:backgroundTint="@color/template_primary"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="#888888" android:layout_gravity="center" android:id="@+id/noCommentsLabel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_comments"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/template_primary" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/proVersionText" android:background="?attr/selectableItemBackground" android:padding="@dimen/margin_medium" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/comments_pro_users_only"/>
        <LinearLayout android:id="@+id/addCommentLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatEditText android:theme="@style/LightEditText" android:textColor="@color/white" android:textColorHint="@color/white" android:id="@+id/commentText" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="@dimen/margin_small" android:hint="@string/enter_a_comment" android:layout_weight="1" android:foregroundTint="@color/white"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/addCommentButton" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_send_white_24dp" android:contentDescription="@string/add_comment"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/uploadingLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_medium" android:layout_marginStart="@dimen/margin_medium" android:layout_marginEnd="@dimen/margin_medium">
            <TextView android:textColor="@color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/uploading_comment" android:layout_weight="1"/>
            <ProgressBar android:id="@+id/uploadingSpinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:indeterminateTint="@color/white" style="?android:attr/progressBarStyleSmall"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
