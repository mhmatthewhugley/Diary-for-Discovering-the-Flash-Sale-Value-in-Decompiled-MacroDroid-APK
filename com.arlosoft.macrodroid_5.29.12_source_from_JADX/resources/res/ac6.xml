<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/margin_small" android:paddingEnd="@dimen/margin_small">
    <include layout="@layout/drawer_icon_frame"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="14sp" android:textColor="@color/drawer_text_color" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/stopwatch_name" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" android:layout_marginEnd="@dimen/margin_small"/>
        <TextView android:textSize="12sp" android:textColor="@color/drawer_text_color" android:layout_gravity="center_vertical" android:id="@+id/stopwatch_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:14:05"/>
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/play_pause_button" android:background="@drawable/select_item_background" android:padding="@dimen/margin_small" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_action_play_white" android:layout_marginStart="@dimen/margin_small" app:tint="@color/drawer_text_color"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/clear_button" android:background="@drawable/select_item_background" android:padding="@dimen/margin_small" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/material_ic_clear_24px_svg" app:tint="@color/drawer_text_color"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/drag_handle" android:padding="@dimen/margin_small" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_reorder_white_24dp" android:scaleType="center" android:layout_marginStart="@dimen/margin_medium" app:tint="@color/drawer_text_color"/>
</LinearLayout>
