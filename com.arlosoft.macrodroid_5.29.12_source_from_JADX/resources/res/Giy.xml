<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/swipe_description_overlay_touch_area_top_left" android:background="@drawable/swipe_area" android:layout_width="12dp" android:layout_height="100dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <View android:id="@+id/swipe_description_overlay_touch_area_top_right" android:background="@drawable/swipe_area" android:layout_width="12dp" android:layout_height="100dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/swipe_description_overlay_right_arrow" android:layout_width="150dp" android:layout_height="100dp" android:src="@drawable/arrow_right_red" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/swipe_description_overlay_touch_area_top_left"/>
    <ImageView android:id="@+id/swipe_description_overlay_left_arrow" android:layout_width="150dp" android:layout_height="100dp" android:src="@drawable/arrow_left_red" android:layout_alignParentTop="true" android:layout_toStartOf="@+id/swipe_description_overlay_touch_area_top_right"/>
    <ImageView android:id="@+id/swipe_description_overlay_right_diagonal_arrow" android:layout_width="110dp" android:layout_height="110dp" android:layout_marginTop="30dp" android:src="@drawable/arrow_right_diagonal_red" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <ImageView android:id="@+id/swipe_description_overlay_left_diagonal_arrow" android:layout_width="110dp" android:layout_height="110dp" android:layout_marginTop="30dp" android:src="@drawable/arrow_left_diagonal_red" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/swipe_description_overlay_right_down_arrow" android:layout_width="80dp" android:layout_height="160dp" android:layout_marginTop="20dp" android:src="@drawable/down_arrow_left" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <ImageView android:id="@+id/swipe_description_overlay_left_down_arrow" android:layout_width="80dp" android:layout_height="160dp" android:layout_marginTop="20dp" android:src="@drawable/down_arrow_right" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
