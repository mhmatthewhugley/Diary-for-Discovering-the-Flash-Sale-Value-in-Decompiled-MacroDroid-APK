<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="12dp">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/configure_notification_icon_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <ImageView android:id="@+id/configure_notification_preview_image" android:background="@drawable/icon_background" android:padding="12dp" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/not_icon_setup" android:layout_centerVertical="true" android:layout_marginStart="6dp"/>
                <Button android:id="@+id/configure_notification_icon_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/set_background" android:layout_toStartOf="@+id/configure_notification_change_icon_button" android:layout_toEndOf="@+id/configure_notification_preview_image" style="?android:attr/borderlessButtonStyle"/>
                <Button android:id="@+id/configure_notification_change_icon_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/change" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/notification_subject_input_layout" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatEditText android:id="@+id/configure_notification_subject_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true" android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button android:layout_gravity="bottom" android:id="@+id/configure_notification_magic_subject_button" android:layout_marginBottom="@dimen/margin_tiny" style="@style/MagicTextButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/notification_text_input_layout" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatEditText android:id="@+id/configure_notification_notification_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:singleLine="true" android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button android:layout_gravity="bottom" android:id="@+id/configure_notification_magic_text_button" android:layout_marginBottom="@dimen/margin_tiny" style="@style/MagicTextButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/notification_channel_container" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/actions_accent" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small" android:text="@string/notification_channel" android:layout_marginStart="@dimen/margin_tiny"/>
                <Spinner android:entries="@array/notification_channels" android:id="@+id/notification_channels_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <Button android:id="@+id/edit_notification_channels" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/edit_notification_channels"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/maintain_spaces_container" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <CheckBox android:id="@+id/maintain_spaces_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/popup_action_option_maintain_spaces"/>
                <TextView android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/popup_action_option_maintain_spaces_description" android:layout_marginStart="4dp" android:layout_marginEnd="14dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/sound_options_container" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/default_text_color" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small" android:text="@string/notification_sound" android:layout_marginStart="@dimen/margin_tiny"/>
                <Spinner android:id="@+id/configure_notification_notification_sound" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/notification_container" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/default_text_color" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small" android:text="@string/notification_priority" android:layout_marginStart="@dimen/margin_tiny"/>
                <Spinner android:entries="@array/notification_priority_names" android:id="@+id/configure_notification_priority_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:entryValues="@array/notification_priority_values"/>
            </LinearLayout>
            <CheckBox android:id="@+id/configure_notification_invoke_macro_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/invoke_macro_when_pressed"/>
            <Spinner android:id="@+id/configure_notification_invoke_macro_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="200dp"/>
            <Button android:id="@+id/configInputOutputParams" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/action_block_configure_input_output_params" android:textAllCaps="false" style="@style/ColoredButton"/>
            <CheckBox android:id="@+id/configure_notification_overwrite_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginBottom="4dp" android:text="@string/overwrite_existing_notification"/>
            <CheckBox android:id="@+id/prevent_back_button_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginBottom="4dp" android:text="@string/prevent_back_button_closing_dialog_option"/>
            <CheckBox android:id="@+id/configure_notification_block_next_action" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginBottom="4dp" android:text="@string/block_actions_until_complete"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/actionButtonsContainer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <Button android:id="@+id/actionActionButtonButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_small" android:text="@string/action_notificaiton_add_action_button" style="@style/ColoredButton"/>
        </LinearLayout>
        <include layout="@layout/include_ok_cancel_buttons"/>
    </LinearLayout>
</ScrollView>
