<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#40ffe600" android:endColor="#90ffe600" android:angle="270" android:centerX="0.5" android:centerY="0.5" android:centerColor="#60ffe600"/>
            <stroke android:width="5dp" android:color="#50ff00de"/>
            <corners android:radius="7dp"/>
            <padding android:left="10dp" android:top="6dp" android:right="10dp" android:bottom="6dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#40cb1759" android:endColor="#90cb1759" android:angle="270" android:centerX="0.5" android:centerY="0.5" android:centerColor="#60cb1759"/>
            <stroke android:width="5dp" android:color="#50ff0000"/>
            <corners android:radius="7dp"/>
            <padding android:left="10dp" android:top="6dp" android:right="10dp" android:bottom="6dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#402168d2" android:endColor="#902168d2" android:angle="270" android:centerX="0.5" android:centerY="0.5" android:centerColor="#602168d2"/>
            <stroke android:width="5dp" android:color="#50ff0000"/>
            <corners android:radius="7dp"/>
            <padding android:left="10dp" android:top="6dp" android:right="10dp" android:bottom="6dp"/>
        </shape>
    </item>
</selector>
