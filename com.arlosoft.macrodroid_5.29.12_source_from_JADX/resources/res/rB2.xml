<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RadioGroup android:orientation="horizontal" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="12dp">
        <RadioButton android:id="@+id/containsRadioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/contains" android:layout_weight="1"/>
        <RadioButton android:id="@+id/matchesRadioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="@string/matches" android:layout_weight="1"/>
    </RadioGroup>
    <LinearLayout android:orientation="horizontal" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="12dp">
        <androidx.appcompat.widget.AppCompatEditText android:id="@+id/textToMatch" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/enter_text_to_match" android:maxLines="1" android:layout_weight="1" android:inputType="textUri">
            <requestFocus/>
        </androidx.appcompat.widget.AppCompatEditText>
        <Button android:id="@+id/magicTextButton" style="@style/MagicTextButton"/>
    </LinearLayout>
    <TextView android:id="@+id/wildcardText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_tiny" android:text="@string/wildcards_supported" android:layout_marginStart="12dp"/>
    <include android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/include_ok_cancel_buttons"/>
</LinearLayout>
