                    <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/reorder_button" android:background="@drawable/select_item_background" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_swap_vertical_white_24dp" android:scaleType="center"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/add_button" android:background="@drawable/select_item_background" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_plus_white_24dp" android:scaleType="center"/>
                </LinearLayout>
                <com.arlosoft.macrodroid.drawer.MacroDroidDrawer android:id="@+id/macrodroid_drawer" android:background="@drawable/drawer_body_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>
        </FrameLayout>
        <View android:id="@+id/drawer_anim_fixer_rtl" android:visibility="gone" android:layout_width="60dp" android:layout_height="match_parent"/>
    </LinearLayout>
</com.arlosoft.macrodroid.drawer.DrawerFrameLayout>
