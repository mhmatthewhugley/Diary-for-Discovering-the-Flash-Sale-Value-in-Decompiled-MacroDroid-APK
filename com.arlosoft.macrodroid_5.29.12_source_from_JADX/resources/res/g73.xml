<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="@dimen/margin_medium" android:layout_width="300dp" android:layout_height="match_parent">
    <Button android:id="@+id/set_color_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_color"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:layout_marginBottom="@dimen/margin_medium">
        <TextView android:textColor="@color/default_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/max_lines"/>
        <TextView android:textColor="@color/default_text_color" android:id="@+id/num_lines" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/margin_small"/>
    </LinearLayout>
    <SeekBar android:id="@+id/seek_bar" android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_small" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="27"/>
</LinearLayout>
