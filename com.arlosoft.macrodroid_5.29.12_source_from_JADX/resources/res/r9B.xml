<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/category_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="0dp">
    <View android:id="@+id/divider_top" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/background" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="@drawable/select_item_background">
        <ImageView android:id="@+id/icon" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_nfc_white_24dp" android:scaleType="center" android:layout_marginStart="-8dp"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/category_name" android:paddingTop="12dp" android:paddingRight="@dimen/margin_small" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:id="@+id/divider_bottom" android:layout_width="match_parent" android:layout_height="0dp"/>
</LinearLayout>
