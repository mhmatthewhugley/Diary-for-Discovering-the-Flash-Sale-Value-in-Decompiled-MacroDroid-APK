<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/rootContent" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <LinearLayout android:theme="@style/Toolbar.WhiteAccent" android:orientation="vertical" android:background="@color/system_log_primary" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="@dimen/toolbar_elevation">
        <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" app:titleTextAppearance="@style/TitleToolbarText">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:title="@string/system_log" style="@style/TitleToolbarText"/>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/macroName" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:title="@string/system_log"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:orientation="vertical" android:id="@+id/filterPanel" android:visibility="gone" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/margin_medium" android:paddingRight="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/system_log_log_level"/>
                <Spinner android:textColor="@color/white" android:entries="@array/log_levels" android:id="@+id/logLevelSpinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:entryValues="@array/log_levels_int" android:layout_marginStart="@dimen/margin_small" app:drawableTint="@color/white"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/margin_medium" android:paddingRight="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_medium" android:layout_marginBottom="@dimen/margin_small">
                <com.arlosoft.macrodroid.widget.BetterCheckBox android:textColor="@color/white" android:id="@+id/showTriggers" android:background="@drawable/trigger_white_border_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/triggers" android:maxLines="1" android:singleLine="true" android:layout_weight="1" android:paddingEnd="4dp" android:layout_marginEnd="4dp" android:buttonTint="@color/white" app:autoSizeMaxTextSize="12sp" app:autoSizeMinTextSize="8sp" app:autoSizeTextType="1"/>
                <com.arlosoft.macrodroid.widget.BetterCheckBox android:textColor="@color/white" android:id="@+id/showActions" android:background="@drawable/action_white_border_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/actions" android:maxLines="1" android:singleLine="true" android:layout_weight="1" android:paddingEnd="4dp" android:layout_marginEnd="4dp" android:buttonTint="@color/white" app:autoSizeMaxTextSize="12sp" app:autoSizeMinTextSize="8sp" app:autoSizeTextType="1"/>
                <com.arlosoft.macrodroid.widget.BetterCheckBox android:textColor="@color/white" android:id="@+id/showConstraints" android:background="@drawable/constraint_white_border_bg" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/constraints" android:maxLines="1" android:singleLine="true" android:layout_weight="1" android:paddingEnd="4dp" android:buttonTint="@color/white" app:autoSizeMaxTextSize="12sp" app:autoSizeMinTextSize="8sp" app:autoSizeTextType="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/margin_medium" android:paddingTop="@dimen/margin_small" android:paddingRight="@dimen/margin_medium" android:paddingBottom="@dimen/margin_small" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/macroFilterButton" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:drawablePadding="8dp" android:layout_weight="1" android:textAllCaps="false" android:drawableStart="@drawable/active_icon_new" android:elevation="4dp" app:autoSizeMaxTextSize="12sp" app:autoSizeMinTextSize="8sp" app:autoSizeTextType="1" style="@style/MacroFilterButton"/>
                <Button android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/variablesFilterButton" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:drawablePadding="8dp" android:layout_weight="1" android:textAllCaps="false" android:drawableStart="@drawable/ic_help_box" android:layout_marginStart="@dimen/margin_small" android:elevation="4dp" app:autoSizeMaxTextSize="12sp" app:autoSizeMinTextSize="8sp" app:autoSizeTextType="1" style="@style/VariablesFilterButton"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@+id/infoCard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/margin_small" android:layout_marginTop="@dimen/margin_small" android:layout_marginRight="@dimen/margin_small" android:layout_marginBottom="@dimen/margin_small" layout="@layout/info_card"/>
    <ViewFlipper android:id="@+id/viewFlipper" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView android:scrollbarStyle="outsideOverlay" android:id="@+id/recyclerView" android:padding="@dimen/margin_micro" android:scrollbars="vertical" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" app:fastScrollEnabled="true" app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable" app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable" app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable" app:fastScrollVerticalTrackDrawable="@drawable/line_drawable" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/emptyView" android:paddingBottom="@dimen/margin_medium" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center_horizontal" android:id="@+id/animationView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="-40dp" app:lottie_autoPlay="true" app:lottie_colorFilter="@color/default_text_color" app:lottie_loop="true" app:lottie_rawRes="@raw/pencil_write" app:lottie_scale="0.2"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textStyle="italic" android:textColor="@color/default_text_color" android:gravity="center" android:layout_gravity="center" android:paddingTop="@dimen/margin_tiny" android:paddingBottom="@dimen/margin_tiny" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/margin_medium" android:layout_marginBottom="100dp" android:text="@string/no_events_logged"/>
        </LinearLayout>
    </ViewFlipper>
</LinearLayout>
