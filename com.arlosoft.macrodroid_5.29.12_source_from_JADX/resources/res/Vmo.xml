<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="102dp">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/searchResultsRV" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        <LinearLayout android:gravity="start" android:orientation="vertical" android:id="@+id/recentSearchesLL" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textColor="#000" android:id="@+id/recentSearchesTV" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:text="RECENT SEARCHES" android:layout_marginStart="10dp"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recentSearchesRV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/please_check_spell_errors"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/secondaryInformationLL" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50dp">
            <TextView android:textColor="#000" android:id="@+id/secondaryInfoTitleTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/location_not_found"/>
            <TextView android:id="@+id/secondaryInfoSubTitleTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/please_check_spell_errors"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="85dp">
                <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginStart="15dp">
                    <ImageButton android:id="@+id/backImageBtn" android:background="#00000000" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_back_black_24dp" android:cropToPadding="true" android:contentDescription="@string/todo"/>
                    <TextView android:textSize="18sp" android:textColor="#000000" android:id="@+id/searchTitleTV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/search_title" android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="60dp" android:layout_marginRight="8dp" android:transitionName="@string/searchPlaceHolder">
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="47dp">
            <ImageButton android:id="@+id/imageButton2" android:background="#00000000" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="10dp" android:src="@drawable/ic_search_black_24dp" android:cropToPadding="true" android:contentDescription="@string/todo" android:layout_marginStart="10dp"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <EditText android:textSize="16sp" android:textColor="#000" android:textColorHint="#79646464" android:layout_gravity="center_vertical" android:id="@+id/placeNamET" android:background="#00000000" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="10dp" android:hint="@string/enter_location_hint" android:singleLine="true" android:inputType="text" android:layout_marginStart="10dp">
                    <requestFocus/>
                </EditText>
                <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/eraseCurrentEntryIV" android:padding="5dp" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="5dp" android:src="@drawable/ic_close_black_24dp" android:contentDescription="@string/todo" android:layout_marginEnd="5dp"/>
                <ProgressBar android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/searchProgressBar" android:background="#ffffff" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="5dp" android:layout_marginEnd="5dp"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
