<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center_vertical" android:id="@+id/android_wear_notification_icon_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/icon_colon" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
        <ImageView android:id="@+id/android_wear_notification_preview_image" android:background="@drawable/circular_icon_background_normal" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_settings_white_24dp" android:scaleType="center" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/android_wear_notification_icon_label"/>
        <Button android:id="@+id/android_wear_notification_change_icon_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Change" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="12dp">
        <androidx.appcompat.widget.AppCompatEditText android:id="@+id/android_wear_notification_subject_text" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/enter_notification_subject" android:ems="10" android:singleLine="true" android:layout_weight="1" android:inputType="none"/>
        <Button android:id="@+id/android_wear_notification_magic_subject_button" style="@style/MagicTextButton"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="12dp">
        <androidx.appcompat.widget.AppCompatEditText android:id="@+id/android_wear_notification_notification_text" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/enter_notification_text" android:ems="10" android:singleLine="true" android:layout_weight="1" android:inputType="none"/>
        <Button android:id="@+id/android_wear_notification_magic_text_button" style="@style/MagicTextButton"/>
    </LinearLayout>
    <TextView android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/actions" android:layout_marginStart="12dp"/>
    <LinearLayout android:orientation="horizontal" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="72dp" android:layout_marginBottom="4dp" android:baselineAligned="false" android:paddingStart="12dp" android:paddingEnd="12dp">
        <FrameLayout android:layout_width="64dp" android:layout_height="64dp" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_action_1" android:padding="8dp" android:clickable="true" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/actions_none"/>
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_icon_action_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/active_icon_new"/>
        </FrameLayout>
        <FrameLayout android:layout_width="64dp" android:layout_height="64dp" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_action_2" android:padding="8dp" android:clickable="true" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/actions_none"/>
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_icon_action_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/active_icon_new"/>
        </FrameLayout>
        <FrameLayout android:layout_width="64dp" android:layout_height="64dp" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_action_3" android:padding="8dp" android:clickable="true" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/actions_none"/>
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_icon_action_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/active_icon_new"/>
        </FrameLayout>
        <FrameLayout android:layout_width="64dp" android:layout_height="64dp" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_action_4" android:padding="8dp" android:clickable="true" android:layout_width="64dp" android:layout_height="64dp" android:src="@drawable/actions_none"/>
            <ImageView android:layout_gravity="center" android:id="@+id/android_wear_notification_icon_action_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/active_icon_new"/>
        </FrameLayout>
    </LinearLayout>
    <View android:background="@color/ok_cancel_button_border" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="4dp"/>
    <LinearLayout android:gravity="end" android:id="@+id/button_bar" android:paddingTop="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/cancelButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/button_bar_button_min_width" android:text="@android:string/cancel" style="?android:attr/buttonBarButtonStyle"/>
        <View android:background="@color/ok_cancel_button_border" android:layout_width="1dp" android:layout_height="match_parent"/>
        <Button android:id="@+id/okButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/button_bar_button_min_width" android:text="@android:string/ok" style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
