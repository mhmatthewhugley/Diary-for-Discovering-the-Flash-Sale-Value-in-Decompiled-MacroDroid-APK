            <TextView android:textSize="18sp" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y:"/>
            <androidx.appcompat.widget.AppCompatEditText android:gravity="center_horizontal" android:id="@+id/end_y_location" android:layout_width="90dp" android:layout_height="wrap_content" android:ems="10" android:inputType="number"/>
