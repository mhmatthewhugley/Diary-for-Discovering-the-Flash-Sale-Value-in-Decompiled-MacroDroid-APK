<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TableLayout android:paddingTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp">
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/default_text_color" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/num_failures" android:paddingEnd="5dp"/>
            <Spinner android:entries="@array/failed_login_attempt_options" android:layout_gravity="center_vertical" android:id="@+id/failed_login_config_count_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/default_text_color" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/failures_within" android:paddingEnd="5dp"/>
            <Spinner android:entries="@array/failed_login_attempt_timespan_options" android:layout_gravity="center_vertical" android:id="@+id/failed_login_config_timespan_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <include layout="@layout/include_ok_cancel_buttons"/>
</LinearLayout>
